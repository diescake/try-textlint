{
  "filters": {},
  "rules": {
    "preset-ja-spacing": {
      "ja-space-between-half-and-full-width": {
        "space": "always"
      }
    },
    "preset-ja-technical-writing": true,
    "spellcheck-tech-word": true,
    "ja-technical-writing/no-exclamation-question-mark": false,
    "ja-technical-writing/ja-no-weak-phrase": false,
    "ja-spacing/ja-space-after-exclamation": false,
    "ja-technical-writing/max-ten": {
      max: 4,
    },
    "ja-technical-writing/sentence-length": {
      max: 180,
    },
    "ja-technical-writing/max-kanji-continuous-len": false,
  }
}
